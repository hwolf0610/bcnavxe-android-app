<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="searchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PinnedRadioButtonAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FloatingTextInputLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>

        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>

    <style name="ParagraphCenterDark">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/pinnedMsgColor</item>
    </style>

    <style name="small_dark_text" parent="RobotoTextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="button_dialog_green" parent="RobotoButtonStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="body" parent="RobotoTextViewStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="body_dark" parent="body">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>


    <style name="caption" parent="RobotoTextViewStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="caption_dark" parent="RobotoTextViewStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="tutorial_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/pinnedMsgColor</item>
    </style>

    <style name="tutorial_row">
        <item name="android:layout_marginEnd" tools:ignore="NewApi">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>

    <style name="tb_dark" parent="body">
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="link_button" parent="RobotoButtonStyle">
        <item name="android:textColor">@color/greenishBlue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="section_dark" parent="RobotoTextViewStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#73899c</item>
    </style>

    <style name="quickAccessTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="titleDark">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorLink">#484f62</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#484f62</item>
    </style>

    <style name="titleBigDark" parent="titleDark">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="titleBigWhite" parent="titleBigDark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="caption_white" parent="caption">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotoButtonStyle.GreenButton">
        <item name="android:background">@drawable/green_full_rounded_button_corner3</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settingCaption" parent="RobotoTextViewStyle">
        <item name="android:textColor">@color/textDescGrey</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RadioButtonStyle" parent="body_dark">
        <item name="android:layout_height">@dimen/radio_button_height</item>
        <item name="android:minHeight">@dimen/radio_button_height</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="settingCaption.backup" parent="RobotoTextViewStyle">
        <item name="android:textColor">@color/pinnedMsgColor</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textButton" parent="RobotoTextViewStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <dimen name="radio_button_height">44dp</dimen>

    <style name="custom_theme" parent="Theme.AppCompat.DayNight">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>

    </style>

    <!-- Alert Dialog -->
    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="search_style" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MySwitch">
        <item name="trackTint">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppFullscreenDialogFragment" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textColorError">@color/red</item>
    </style>
</resources>
