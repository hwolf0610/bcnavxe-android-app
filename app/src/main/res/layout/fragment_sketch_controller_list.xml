<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_sketch_controller"
    android:name=".ui.home.fragment.BCSketchControllerFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha=".9"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.home.fragment.BCSketchControllerFragment">

    <ImageButton
        android:id="@+id/btn_closeSketch"
        android:layout_width="@dimen/color_picker"
        android:layout_height="@dimen/color_picker"
        android:background="@color/white"
        android:src="@drawable/ic_close_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_reset"
            android:layout_width="@dimen/color_picker"
            android:layout_height="@dimen/color_picker"
            android:background="@color/white"
            android:src="@drawable/ic_reset" />

        <ImageButton
            android:id="@+id/btn_color_picker"
            android:layout_width="@dimen/color_picker"
            android:layout_height="@dimen/color_picker"
            android:background="@color/white"
            android:src="@drawable/ic_color" />

        <ImageButton
            android:id="@+id/btn_eraser"
            android:layout_width="@dimen/color_picker"
            android:layout_height="@dimen/color_picker"
            android:background="@color/white"
            android:src="@drawable/ic_eraser" />

        <ImageButton
            android:id="@+id/btn_undo"
            android:layout_width="@dimen/color_picker"
            android:layout_height="@dimen/color_picker"
            android:background="@color/white"
            android:src="@drawable/ic_undo" />

        <ImageButton
            android:id="@+id/btn_redo"
            android:layout_width="@dimen/color_picker"
            android:layout_height="@dimen/color_picker"
            android:background="@color/white"
            android:src="@drawable/ic_redo" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="@dimen/color_picker"
            android:layout_height="@dimen/color_picker"
            android:background="@color/white"
            android:src="@drawable/ic_download" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_color_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/layout_color_picker" />
</LinearLayout>